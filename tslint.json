{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "no-string-literal": false,
    "no-empty": false,
    "no-unused-expression": false,
    "quotemark": [
      true,
      "double"
    ],
    "indent": [
      true
    ],
    "ordered-imports": true,
    "trailing-comma": false,
    /** По умолчанию public - модификатор доступа и его указывать не нужно */
    "member-access": [
      true,
      "no-public"
    ],
    "prefer-for-of": false,
    "only-arrow-functions": false,
    /** Обязательное указание типов для возвращаемого результата */
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      //"arrow-parameter",
      "property-declaration"
    ],
    /** Явно типы указывать не нужно для переменных и для инициализируемых параметров */
    "no-inferrable-types": [
      true,
      "ignore-params",
      "ignore-properties"
    ],
    "use-default-type-parameter": true,
    /** Схема расположения объектов как для java классов */
    "member-ordering": {
      "options": {
        "order": "fields-first"
      }
    },
    "interface-name": [
      false
    ],
    /** Максимальная длина строки - 180 символов. */
    "max-line-length": {
      "options": [
        180
      ]
    },
    /** Разрешаем столько классов в одном файле, сколько требуется */
    "max-classes-per-file": false,
    /** Отключаем экспорт класса по умолчанию */
    "no-default-export": true,
    "arrow-parens": false,
    // Pending fix for shorthand property names.
    "object-literal-sort-keys": false,
    "object-literal-key-quotes": false,
    "no-bitwise": false,
    "strictPropertyInitialization": false,
    /** Краткий стиль указания свойств в JSON объекте делаем необязательным */
    "object-literal-shorthand": false,
    /** Разрешаем указывать и типы и интерфейсы */
    "interface-over-type-literal": false,
    /** Файл не должен заканчиваться символом переноса строки */
    "eofline": false,
    /* Разрешаем расширять базовые правила нашими */
    "curly": true,
    /** Включение консоли */
    "no-console": [
      "error"
    ],
    /** Запрещается изменять аргументы функций */
    "no-parameter-reassignment": true
  }
}
